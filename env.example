# Crowdin OAuth App Configuration
CROWDIN_CLIENT_ID=your_crowdin_client_id_here
CROWDIN_CLIENT_SECRET=your_crowdin_client_secret_here

# Application Base URL (for development, use ngrok URL)
BASE_URL=https://your-app-domain.com

# Database Configuration (SQLite)
DB_TYPE=sqlite
DB_DATABASE=crowdin_srx_app.db

# Application Settings
NODE_ENV=development
PORT=3000

# Logging
LOG_LEVEL=info

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Crowdin API Settings
CROWDIN_API_URL=https://api.crowdin.com
CROWDIN_ENTERPRISE_API_URL=https://your-enterprise-domain.crowdin.com

# App Configuration
APP_NAME="Crowdin SRX Automation App"
APP_VERSION=1.0.0
APP_DESCRIPTION="Automate SRX configuration for XML files in Strava Project Group"
